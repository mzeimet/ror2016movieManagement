<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Genres</h1>

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>#Movies
                </th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= genre.videos.where(:videoType => 1).size %></td>
                <td><%= link_to icon_view, genre %></td>
                <td><%= link_to icon_edit, edit_genre_path(genre) %></td>
                <td><%= link_to icon_delete, genre, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to 'New Genre', new_genre_path %>
</div>
