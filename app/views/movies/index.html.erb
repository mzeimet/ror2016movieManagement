<div class="container">
<h1>Listing Movies</h1>

<table class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Seen</th>
      <th>Lenght</th>
      <th>Relasedate</th>
      <th>Rating</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.name %></td>
        <td><%= movie.seen %></td>
        <td><%= movie.lenght %></td>
        <td><%= movie.relasedate %></td>
        <td><%= movie.rating %></td>
        <td><%= movie.description %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, movie %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_movie_path(movie) %> </td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, movie, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

