<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Platform
        <%= @pname %></h1>

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>Video Name</th>
                <th>Borrowed</th>
                <th>Borrowed until</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @platforms.each do |platform| %>
            <tr>
                <td>
                    <% if !platform.video.nil? %>
                      <% if platform.video.videoType = 1 %>
                        <%= link_to platform.video.name, video_path(platform.video.id) %>
                      <% else %>
                        <%= link_to platform.video.name, episode_path(platform.video.id) %>
                      <% end %>
                    <% end %>
                </td>
                <% if platform.borrowed %>
                <td>
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                </td>
                <td>
                    <%= convert_date(platform.borrowedDate) %>
                </td>
                <%else %>
                <td>
                    <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                </td>
                <td></td>
                <% end %>

                <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, platform %></td>
                <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_platform_path(platform) %>
                </td>
                <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to 'Back', platforms_path %>
</div>
