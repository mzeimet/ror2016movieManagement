<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Platform
        <%= @pname %></h1>

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>Video Name</th>
                <th>Borrowed</th>
                <th>Borrowed until</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @platforms.each do |platform| %>
            <tr>
                <td>
                    <% if !platform.video.nil? %>
                    <% if platform.video.videoType = 1 %>
                    <%= link_to platform.video.name, video_path(platform.video.id) %>
                <% else %>
                    <%= link_to platform.video.name, episode_path(platform.video.id) %>
                    <% end %>
                    <% end %>
                </td>
                <td>
                    <%= icon_right_wrong(platform.borrowed) %>
                </td>
                <td>
                    <% if platform.borrowed %>
                    <%= convert_date(platform.borrowedDate) %>
                    <% end %>
                </td>
                <td><%= link_to icon_view , platform %></td>
                <td><%= link_to icon_edit, edit_platform_path(platform) %></td>
                <td><%= link_to icon_delete, platform, method: :delete, data: { confirm: 'Are you sure?' } %></td>

            </tr>
            <% end %>
        </tbody>
    </table>

    <br>

    <%= link_to 'Back', platforms_path %>
</div>
