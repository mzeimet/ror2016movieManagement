<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Regisseurs</h1>

    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @regisseurs.each do |regisseur| %>
            <tr>
                <td><%= regisseur.name %></td>
                <td><%= link_to icon_view, regisseur %></td>
                <td><%= link_to icon_edit, edit_regisseur_path(regisseur) %></td>
                <td><%= link_to icon_delete, regisseur, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <br>
    <p>Add regisseur</p>
    <%= link_to icon_add, new_regisseur_path %>
</div>
