<div class="container">
    <%= render "layouts/successdiv" %>
    <h1>
        <%= @season.series.name.to_s() + " Season " +  @season.number.to_s() %>
    </h1>
    <h2>Episodes
    </h2>
    <table class="table table-condensed table-bordered">
        <thead>
            <tr>
                <th>Number</th>
                <th colspan="3"></th>
            </tr>
        </thead>

        <tbody>
            <% @season.episodes.each do |episode| %>
            <tr>
                <td><%= episode.episodeNumber %></td>
                <td><%= link_to icon_view, episode %></td>
                <td><%= link_to icon_edit, edit_episode_path(episode) %></td>
                <td><%= link_to icon_delete, episode_path(episode, :from =>"season", :season_id =>@season.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <p>Add New Episode</p>
    <%= link_to icon_add, {:controller => "episodes", :action => "new", :season => @season.id } %><br><br>
    <%= link_to 'Edit', edit_season_path(@season) %>
    <%= link_to 'Back', series_path(@season.series.id) %>
