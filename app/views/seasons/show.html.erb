<p id="notice"><%= notice %></p>
<div class="container">
<h1>
  <%= @season.series.name.to_s() + " Season " +  @season.number.to_s() %>
</h1>
<p>
  <strong>Cover:</strong>
  <%= @season.cover %>
</p>
<h2>Episodes </h2>
<table  class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @season.episodes.each do |episode| %>
      <tr>
        <td><%= episode.episodeNumber %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, episode %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_episode_path(episode) %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_season_path(@season) %> |
<%= link_to 'Back', series_path(@season.series.id) %>
