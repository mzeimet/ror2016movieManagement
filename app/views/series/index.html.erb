<p id="notice"><%= notice %></p>
<div class="container">
<h1>Series</h1>
<table  class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
      <th>#Seasons</th>
      <th>Add Season</th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.name %></td>
        <td><%= link_to icon_view, series %></td>
        <td><%= link_to icon_edit, edit_series_path(series) %></td>
        <td><%= link_to icon_delete, series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= series.seasons.size %></td>
        <td><%= link_to icon_add, {:controller => "seasons", :action => "new", :series => series.id } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p>Add New Series</p>
<%= link_to icon_add , new_series_path %>
</div>
