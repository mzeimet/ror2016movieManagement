<p id="notice"><%= notice %></p>
<div class="container">
<h1>Series</h1>

<table  class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
      <th>#Seasons</th>
      <th>Add Season</th>
    </tr>
  </thead>

  <tbody>
    <% @series.each do |series| %>
      <tr>
        <td><%= series.name %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, series %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_series_path(series) %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, series, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= series.seasons.size %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, {:controller => "seasons", :action => "new", :series => series.id } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Series', new_series_path %>
</div>
