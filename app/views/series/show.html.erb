<p id="notice"><%= notice %></p>
<div class="container">
<h1>
    <%= @series.name %>
</h1>

<p>
  <strong>Cover:</strong>
  <%= @series.cover %>
</p>
<h2>Seasons</h2>

<table  class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Number</th>
      <th colspan="3"></th>
      <th>#Episodes</th>
      <th>Add Episode</th>
    </tr>
  </thead>

  <tbody>
    <% @series.seasons.each do |season| %>
      <tr>
        <td><%= season.number %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, season %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_season_path(season) %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, season_path(season, :from =>"series", :series_id =>@series.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= season.episodes.size %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, {:controller => "episodes", :action => "new", :season => season.id } %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
<p> Add Season </p>
<%= link_to '<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>'.html_safe, {:controller => "seasons", :action => "new", :series => @series.id } %><br><br>
<%= link_to 'Edit', edit_series_path(@series) %> |
<%= link_to 'Back', series_index_path %>
</div>
