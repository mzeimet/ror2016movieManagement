<div class="container">
<h1>Videos</h1>

<table class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Type</th>
      <th>Name</th>
      <th>Seen</th>
      <th>Lenght</th>
      <th>Cover</th>
      <th>Relasedate</th>
      <th>Rating</th>
      <th>Summary</th>
      <th>Age Raiting</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><% if video.videoType < 2 %> Movie <% else %> Episode <% end %> </td>
        <td><%= video.name %></td>
        <td><%= video.seen %></td>
        <td><%= video.length %></td>
        <td><%= video.cover %></td>
        <td><%= video.release %></td>
        <td><%= video.raiting %></td>
        <td><%= video.summary %></td>
        <td><%= video.ageRating %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, video %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_video_path(video) %> </td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

