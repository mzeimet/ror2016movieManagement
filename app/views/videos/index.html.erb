<div class="container">
<h1>Movies</h1>

<table class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Relasedate</th>
      <th>Seen</th>
      <th>Lenght</th>
      <th>Rating</th>
      <th>Age Raiting</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.name %></td>
        <td><%= video.release %></td>
        <td><% if video.seen %>
              <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
            <%else %>
              <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
            <% end %>
       </td>
        <td><%= video.length %></td>
        <td><%= video.raiting %></td>
        <td><%= video.ageRating %></td>
        <td><%= video.note %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>'.html_safe, video %></td>
        <td><%= link_to '<span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>'.html_safe, edit_video_path(video) %> </td>
        <td><%= link_to '<span class="glyphicon glyphicon-trash" aria-hidden="true"></span>'.html_safe, video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Movie', new_video_path %>
</div>
