<div class="container">
<h1>Movies</h1>

<table class ="table table-condensed table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Relasedate</th>
      <th>Seen</th>
      <th>Lenght</th>
      <th>Rating</th>
      <th>Age Raiting</th>
      <th>Note</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @videos.each do |video| %>
      <tr>
        <td><%= video.name %></td>
        <td><%= video.release %></td>
        <td><%= icon_right_wrong(video.seen) %></td>
        <td><%= video.length %></td>
        <td><%= video.raiting %></td>
        <td><%= video.ageRating %></td>
        <td><%= video.note %></td>
        <td><%= link_to icon_view, video %></td>
        <td><%= link_to icon_edit, edit_video_path(video) %> </td>
        <td><%= link_to icon_delete, video, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<p> Add New Movie </p>
<%= link_to icon_add, new_video_path %>
</div>
