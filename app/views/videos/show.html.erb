<p id="notice"><%= notice %></p>


<% if !@video.cover.nil? && @video.cover.to_s.length > 0 %>
  <%= image_tag @video.cover, height: "400" %>
<%end%>

<p>
  <strong>Name:</strong>
  <%= @video.name %>
</p>

<p>
  <strong>Seen:</strong>
  <% if @video.seen %>
      <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
  <%else %>
      <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
  <% end %>
</p>

<p>
  <strong>Length:</strong>
  <%= @video.length %>
</p>

<p>
  <strong>Release:</strong>
  <%= @video.release %>
</p>

<p>
  <strong>Raiting:</strong>
  <%= @video.raiting %>
</p>

<p>
  <strong>Agerating:</strong>
  <%= @video.ageRating %>
</p>

<p>
  <strong>Note:</strong>
  <%= @video.note %>
</p>
<p>
  <strong> Actors:</strong>
  <% @video.actors.each do |f| %>
    <%= f.name %>
  <% end %>
</p>
<p>
  <strong> Genres:</strong>
  <% @video.genres.each do |f| %>
    <%= f.name %>
  <% end %>
</p>
<p>
  <strong>Summary:</strong>
  <%= @video.summary %>
</p>
<p>
  <strong> Location:</strong>
  <%= @video.location.description %>
</p>
<%= link_to 'Edit', edit_video_path(@video) %> |
<%= link_to 'Back', videos_path %>
